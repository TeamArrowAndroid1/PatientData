<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="patient.arrow.myapplication.Patient_activity">

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:id="@+id/dreq"
        android:src="@drawable/req"
        android:layout_alignParentStart="true"
        android:layout_marginTop="28dp" />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:id="@+id/nreq"
        android:layout_alignTop="@+id/dreq"
        android:layout_alignParentEnd="true"
        android:src="@drawable/req" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="PATIENT ID"
        android:id="@+id/p_idd"
        android:layout_below="@+id/dreq"
        android:layout_alignParentStart="true"
        android:layout_marginTop="32dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/p_id"
        android:text="---------"
        android:layout_above="@+id/textView2"
        android:layout_alignStart="@+id/p_name" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="PATIENT NAME"
        android:id="@+id/textView2"
        android:layout_marginTop="21dp"
        android:layout_below="@+id/p_idd"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="BLOOD PRESSURE"
        android:id="@+id/textView3"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="21dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="CHOLESTROL"
        android:id="@+id/textView4"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="TEMPERATURE"
        android:id="@+id/textView5"
        android:layout_below="@+id/textView4"
        android:layout_alignParentStart="true"
        android:layout_marginTop="23dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Doctor id"
        android:id="@+id/d_id"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/p_idd" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Nurse id"
        android:id="@+id/n_id"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/nreq" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="---------"
        android:id="@+id/p_name"
        android:layout_alignTop="@+id/textView2"
        android:layout_alignEnd="@+id/n_id" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="---------"
        android:id="@+id/bp"
        android:layout_alignTop="@+id/textView3"
        android:layout_alignEnd="@+id/p_name" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="---------"
        android:id="@+id/cho"
        android:layout_alignTop="@+id/textView4"
        android:layout_alignEnd="@+id/bp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="---------"
        android:id="@+id/temp"
        android:layout_alignTop="@+id/textView5"
        android:layout_alignEnd="@+id/cho" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="DATE"
        android:id="@+id/d"
        android:layout_below="@+id/textView6"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="---------"
        android:id="@+id/date"
        android:layout_alignTop="@+id/d"
        android:layout_alignEnd="@+id/temp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/back"
        android:src="@android:drawable/ic_menu_revert"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="HEART BEAT"
        android:id="@+id/textView6"
        android:layout_marginTop="24dp"
        android:layout_below="@+id/textView5" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="---------"
        android:id="@+id/heart"
        android:layout_alignTop="@+id/textView6"
        android:layout_alignEnd="@+id/date" />
</RelativeLayout>
